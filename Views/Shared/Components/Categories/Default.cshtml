@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">

    <h4>Categories</h4>

    <a asp-controller="Home" asp-action="BookView" asp-route-bookCategory="" asp-route-pageNum ="1" class="btn btn-outline-secondary">All</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="BookView" asp-route-bookCategory="@c" asp-route-pageNum ="1"
           class="btn @(ViewBag.SelectedCategory == c ? "btn-primary": "btn-outline-secondary")">@c</a>
    }
</div>