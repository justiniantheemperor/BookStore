@{
    ViewData["Title"] = "BookView";
}

@model BooksViewModel


<div>
    <table class="table table-bordered table-striped">
        <thead class="font-weight-bold">
            <tr>
                <td>Title</td>
                <td>Author</td>
                <td>Publisher</td>
                <td>Isbn</td>
                <td>Classification</td>
                <td>Category</td>
                <td>PageCount</td>
                <td>Price</td>
            </tr>
        </thead>

        <tbody>
            @*create a for loop to print each row in our table*@
            @foreach (Book b in Model.Books)
            {
                <tr>
                    <td>@b.Title</td>
                    <td>@b.Author</td>
                    <td>@b.Publisher</td>
                    <td>@b.Isbn</td>
                    <td>@b.Classification</td>
                    <td>@b.Category</td>
                    <td>@b.PageCount</td>
                    <td>@b.Price</td>
                </tr>
            }
        </tbody>

    </table>
</div>

<div page-blah="@Model.PageInfo" page-action="BookView"></div>
